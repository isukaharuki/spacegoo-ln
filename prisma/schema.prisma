datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Novel {
  id        String   @id @default(cuid())
  title     String
  coverUrl  String
  review    String
  volumes   Volume[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([title])
}

model Volume {
  id        String   @id @default(cuid())
  novelId   String
  novel     Novel    @relation(fields: [novelId], references: [id], onDelete: Cascade)
  name      String
  platform  Platform
  url       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Platform {
  TELEGRAM
  FACEBOOK
}